<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#EEE3EEFA"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/activity_vertical_margin"
            app:contentPadding="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/img_league_badge"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/english_premier_league" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/img_league_badge"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <LinearLayout
                            style="@style/LinearFieldStyle"
                            android:layout_marginBottom="10dp">

                            <TextView
                                style="@style/TextTitle"
                                android:text="@string/league_name" />

                            <TextView
                                style="@style/TextContent"
                                android:text="English Premier League" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/LinearFieldStyle"
                            android:layout_marginBottom="10dp">

                            <TextView
                                style="@style/TextTitle"
                                android:text="@string/country" />

                            <TextView
                                style="@style/TextContent"
                                android:text="England" />

                        </LinearLayout>

                        <LinearLayout style="@style/LinearFieldStyle">

                            <TextView
                                style="@style/TextTitle"
                                android:text="@string/first_event" />

                            <TextView
                                style="@style/TextContent"
                                android:text="2000-08-18" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageView
                        style="@style/ImageSocial"
                        android:src="@drawable/domain" />

                    <ImageView
                        style="@style/ImageSocial"
                        android:src="@drawable/facebook" />

                    <ImageView
                        style="@style/ImageSocial"
                        android:src="@drawable/twitter" />

                    <ImageView
                        style="@style/ImageSocial"
                        android:src="@drawable/youtube" />

                    <ImageView
                        style="@style/ImageSocial"
                        android:src="@drawable/rss" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_league_description_title"
            style="@style/TextDescriptionTitle"
            android:text="@string/league_description" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            tools:ignore="NestedWeights">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="@string/league_description_hint"/>

        </ScrollView>

    </LinearLayout>

</LinearLayout>